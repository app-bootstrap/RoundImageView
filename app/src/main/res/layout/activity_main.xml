<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/xdf.roundimageview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <xdf.roundimageview.RoundImageView
            android:id="@+id/local_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            custom:border_outside_color="@color/yellow"
            custom:border_thickness="2dp"
            android:src="@drawable/sample" />

        <TextView
            android:id="@+id/local_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/local_image"
            android:gravity="center"
            android:text="@string/localimage"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <xdf.roundimageview.RoundImageView
            android:id="@+id/online_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/online_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/online_image"
            android:gravity="center"
            android:text="@string/onlineimage"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>
